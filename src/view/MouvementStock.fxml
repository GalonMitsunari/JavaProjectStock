<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.MouvementStockController">
    <Label text="Gestion des Mouvements de Stock"/>
    <ListView fx:id="mouvementListView"/>
    <Label text="Produit ID"/>
    <TextField fx:id="produitIdField"/>
    <Label text="Type de Mouvement"/>
    <ChoiceBox fx:id="typeMouvementChoiceBox"/>
    <Label text="Quantité"/>
    <TextField fx:id="quantiteField"/>
    <Label text="Rack ID (optionnel)"/>
    <TextField fx:id="rackIdField"/>
    <Button text="Ajouter Mouvement" onAction="#addMouvement"/>
</VBox>
